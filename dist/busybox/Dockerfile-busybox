FROM klakegg/hugo:base AS base



FROM scratch AS files

COPY --from=base /bin/hugo /bin/hugo
COPY files /



FROM busybox:1.28

ENV HUGO_BIND="0.0.0.0" \
    HUGO_DESTINATION="/target" \
    HUGO_ENV="DEV"

COPY --from=files / /

EXPOSE 1313

VOLUME /src /target
WORKDIR /src

ENTRYPOINT ["sh", "/run.sh"]
